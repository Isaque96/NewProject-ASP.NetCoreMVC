@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h3>Seller</h3>
<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="text-secondary"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email" class="text-secondary"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="text-secondary"></label>
                <input asp-for="BirthDate" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="text-secondary"></label>
                <input asp-for="BaseSalary" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>